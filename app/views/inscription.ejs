<%- include('partials/header') %>

    <div class="main_content">

        <h1>Inscription Edition 2021</h1>
        <div>
            <form class="form" action="/resume" method="post">
                <fieldset>
                    <legend class="legend_form">L'étudiant</legend>
                    <div class="form_part">
                        <div class="form_left">
                            <div class="form_div">
                                <label for="">Prénom : </label>
                                <input class="form_input" type=" text" name="firstname" id="firstname" value=""
                                    placeholder="Votre prénom">
                            </div>
                            <div class="form_div">
                                <label for="">Nom de famille : </label>
                                <input class="form_input" type="text" name="lastname" id="lastname" value=""
                                    placeholder="Votre nom">
                            </div>
                            <div class="form_div">
                                <label for="">Date de naissance : </label>
                                <input class="form_input" type=" date" name="birthdate" id="birthdate" value=""
                                    placeholder="Votre date de naissance">
                            </div>
                            <div class="form_div">
                                <label for="">Adresse : </label>
                                <input class="form_input" type="text" name="adress" id="adress" value=""
                                    placeholder="Votre adresse">
                            </div>
                            <div class="form_div">
                                <label for="">Complément d'adresse : </label>
                                <input class=" form_input" type="text" name="adress2" id="adress2" value=""
                                    placeholder="Complément d'adresse">
                            </div>
                            <div class="form_div">
                                <label for="">Code postal : </label>
                                <input class="form_input" type=" text" name="zip" id="zip" value=""
                                    placeholder="Code Postal">
                            </div>
                            <div class="form_div">
                                <label for="">Ville : </label>
                                <input class="form_input" type="text" name="city" id="city" value=""
                                    placeholder="Votre ville">
                            </div>
                            <div class="form_div">
                                <label for="">Email : </label>
                                <input class="form_input" type="email" name="mail" id="mail" value=""
                                    placeholder="Votre email">
                            </div>
                            <div class="form_div">
                                <label for="">Téléphone : </label>
                                <input class="form_input" type=" tel" name="phone" id="phone" value=""
                                    placeholder="Votre téléphone">
                            </div>
                        </div>



                    </div>

                </fieldset>
                <fieldset>
                    <legend class="legend_form">Le choix de la formule</legend>
                    <div class="form_formule">

                        <div class="form_formule_choice">
                            <a class="formule_link" href="#">
                                <img class="minilogo" src="/picture/miniLogo.png" alt="">
                                <p>350€</p>
                                <p>Demi-pension</p>
                            </a>
                        </div>
                        <div class="form_formule_choice">
                            <a class="formule_link" href="#">
                                <img class="minilogo" src="/picture/miniLogo.png" alt="">
                                <p>550€</p>
                                <p>Pension complète</p>
                            </a>

                        </div>
                        <div class="form_formule_choice">
                            <a class="formule_link" href="#"><img class="minilogo" src="/picture/miniLogo.png" alt="">
                                <p class="formule_price">60€</p>
                                <p class="formule_type"> Pratique amateure</p>
                            </a>


                        </div>
                    </div>
                </fieldset>
                <!--
    <fieldset>
                    <legend class="legend_form">Les parents</legend>
                </fieldset>

-->

            </form>
        </div>

    </div>
